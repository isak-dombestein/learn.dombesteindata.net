<div class="blob-container">
  <div class="blob blob-1"></div>
  <div class="blob blob-2"></div>
  <div class="blob blob-3"></div>
  <div class="blob blob-4"></div>
  <div class="blob blob-5"></div>
</div>

<style>
  .blob-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -1; /* Sits behind all content */
    background: #0d1117; /* Dark background */
  }

  .blob {
    position: absolute;
    border-radius: 50%;
    /* The heavy blur is what creates the soft, glowing effect */
    filter: blur(120px);
    opacity: 0.4;
  }

  /* Define each blob's color, size, position, and unique animation */
  .blob-1 {
    width: 400px;
    height: 400px;
    top: -150px;
    left: -150px;
    background: #d2a8ff; /* Purple */
    animation: moveBlob1 20s infinite alternate;
  }

  .blob-2 {
    width: 300px;
    height: 300px;
    bottom: -100px;
    right: -100px;
    background: #79c0ff; /* Blue */
    animation: moveBlob2 25s infinite alternate-reverse;
  }

  .blob-3 {
    width: 250px;
    height: 250px;
    top: 50%;
    left: 50%;
    background: #ff7b72; /* Pink/Red */
    animation: moveBlob1 15s infinite alternate;
  }

    .blob-4 {
    width: 350px;
    height: 350px;
    top: -100px;
    right: -150px;
    background: #7ee787; /* Green */
    animation: moveBlob2 22s infinite alternate;
  }

  .blob-5 {
    width: 280px;
    height: 280px;
    bottom: -150px;
    left: 10%;
    background: #ffa657; /* Orange */
    animation: moveBlob1 18s infinite alternate-reverse;
  }

  @keyframes moveBlob1 {
    from {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    to {
      transform: translate(200px, 100px) rotate(180deg) scale(1.2);
    }
  }

  @keyframes moveBlob2 {
    from {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    to {
      transform: translate(-150px, -200px) rotate(-120deg) scale(1.1);
    }
  }
</style>